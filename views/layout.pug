doctype html
html(lang='en')
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/global.css')
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    block styles
  body
    header(class="header")
      a(class="header__link" href="/")
        img(class="header__image" src="/images/optimistictrousers.jpg" alt="smiling pair of pants")
      a(href="/category/create")
        button(class="header__button") ADD NEW CATEGORY
          div(class="header__icon") +
      a(href="/item/create")
        button(class="header__button") ADD NEW ITEM
          div(class="header__icon") +
      a(href="/iteminstance/create")
        button(class="header__button") ADD NEW ITEM INSTANCE
          div(class="header__icon") +
    main
      block content

