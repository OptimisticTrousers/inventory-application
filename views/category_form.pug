extends layout

block styles
    link(rel='stylesheet' href='/stylesheets/form.css')

block content

    h1=title

    section(class="form")
        form(class="form__form" method="POST" action="")
            div(class="form__group")
                label(class="form__label" for='name') Name:
                input(id="name" name="name" class="form__control" required="true" placeholder="Jerseys" value=(category && category.name))
            div(class="form__group")
                label(class="form__label" for='description') Description
                textarea(id="description" name="description" class="form__textarea" required="true" placeholder="Celebrate your team and your city with the 2021/22 NBA City Edition Jerseys to rep your team in style. We also offer NBA Statement Edition jerseys for your favorite players.") #{category && category.description}
            button(class="form__button" type="submit") SUBMIT

        if errors
            ul
                for error in errors
                    li!= error.msg
