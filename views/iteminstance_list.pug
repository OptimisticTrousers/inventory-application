extends layout

block styles
    link(rel='stylesheet' href='/stylesheets/detail.css')

block content
    div(class="detail__container")
      h2(class="detail__detail") Item Instances: 
        span(class="detail__number") (#{iteminstance_list.length})
      a(class="detail__link detail__link--add" href="/iteminstance/create") Add Item Instance
    div(class="detail")
        header(class="detail__header")
            div(class="detail__text")
                h1(class="detail__title") Item Instances
                p(class="detail__description") A list of all item instances in the application
        div(class="detail__list")
            if iteminstance_list.length > 0 
                for instance in iteminstance_list
                    article(class="detail__article")
                        h2(class="detail__name") 
                            span(class="detail__bold")=instance.item.name
                        p(class="detail__description") Item Size: 
                            span(class="detail__bold")=instance.size
                        p(class="detail__description") Item Condition: 
                            span(class="detail__bold")=instance.condition
                        p(class="detail__description") Item Available: 
                            span(class="detail__bold")=instance.available
                        if instance.picture
                            img(class="detail__image" src=`/images/${instance.picture.get("filename")}`)
                        div(class="detail__links")
                            a(class="detail__link" href=instance.url) Details
                            a(class="detail__link" href=`${instance.url}/update`) Edit
                            a(class="detail__link" href=`${instance.url}/delete`) Delete
            else
                li There are no item instances