extends layout

block styles
    link(rel='stylesheet' href='/stylesheets/delete.css')

block content
    if category_items.length
        div(class="error")
            h1(class="error__title") #{title}: #{category.name}

            p(class="error__description") #[strong Delete the following items before attempting to delete this category.]

            ul(class="error__list")
            each item in category_items
                li(class="error__item")
                    a(class="error__link" href=item.url) #{item.name}
    else
        div(class="delete")
            div(class="delete__container")
                h2(class="delete__header") Delete category?

                p(class="delete__description") Are you sure you want to delete "#[strong #{category.name}]"
                p(class="delete__description") You can't undo this action.

                form(method='POST' action='' class='form')
                    div(class='form__group')
                        input(id="categoryid" class="form__control" type='hidden' name='categoryid' required="true" value=category._id)

                    button(class='form__button' type='submit') Delete